{
    "compilerOptions": {
        "sourceMap": true,
        "keyofStringsOnly": true, 
        "target": "es5",
        "jsx": "react",
        "module": "esNext",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "declaration": false,
        "removeComments": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strict": true,
        "outDir": "./dist/",
        "lib": ["es6", "es7", "dom"]
    },
    "exclude": ["dist", "build", "node_modules"]
}