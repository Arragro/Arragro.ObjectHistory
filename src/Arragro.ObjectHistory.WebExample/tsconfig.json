{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "target": "es5",
        "jsx": "react",
        "module": "esNext",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "declaration": false,
        "removeComments": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strict": true,
        "outDir": "./dist/",
        "baseUrl": ".",
        "types": ["node"],
        "typeRoots" : ["./types"],
        "lib": ["es6", "es7", "dom"]
    },
    "exclude": ["dist", "build", "node_modules"],
    "include": ["./types", "./ReactApp", "./ReactAppLibrary"]
}