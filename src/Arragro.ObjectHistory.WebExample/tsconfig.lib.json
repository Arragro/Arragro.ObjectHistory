{
    "extends": "./tsconfig",
    "compilerOptions": {
        "outDir": "dist/types",
        "declaration": true,
        "declarationMap": true,
        "isolatedModules": false,
        "noEmit": false,
        "allowJs": false,
        "emitDeclarationOnly": true
    },
    "include": [
        "./ReactAppLibrary/index.ts",
        "./types/**/*",
    ],
    "exclude": [
        "wwwroot",
        "dist",
        "build",
        "node_modules"
    ]
}
